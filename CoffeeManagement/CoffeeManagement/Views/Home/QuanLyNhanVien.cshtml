                            <!-- /.box-body -->

                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <input id="addNhanVien" type="submit" class="btn btn-info pull-right" value="Lưu">
            </div>
        </div>


        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
